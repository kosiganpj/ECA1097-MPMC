//DISPLAY OF ROLLING MESSAGE HELP US
START MOV SI,1200H
MOV CX,000FH
MOV AL,10
OUT C2,AL
MOV AL,0CC
OUT C2,AL
MOV AL,90
OUT C2,AL
NEXT MOV AL,[SI]
OUT C0,AL
DELAY MOV DX,0FFFFH
LOOP1 DEC DX
JNZ LOOP1
INC SI
LOOP NEXT
JMP START
HLT

//DISPLAY THE CHARACTER 3
MOV AL,00
OUT C2,AL
MOV AL,0CC
OUT C2,AL
MOV AL,90
OUT C2,AL
MOV AL,8F
OUT C0,AL
HLT
